
public class TesteConversao {
	public static void main(String[] args) {
		double salario = 1270.50; 
		int valor = (int) salario;
		System.out.println("O valor do salario convertido para inteiro Ã© " + valor);
		
		int x = 2000000;
		long numeroGrande = 325551156265L;
		byte b = 127;
		float f = 15.5f;
		
		
		double valor1 = 0.2;
		double valor2 = 0.1;
		double total = valor1 + valor2;
		
		System.out.println("Exemplo de um fator diferenciado no double " + total);
	}
}